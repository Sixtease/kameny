{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": false,
    "strict": true
  },
  "include": [
    "./src"
  ],
  "exclude": ["node_modules"]
}
